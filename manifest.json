{
  "manifest_version": 3,
  "name": "Domain Blocklist Manager",
  "version": "1.0",
  "description": "Block or unblock specific domains while browsing.",
  "permissions": ["webRequest", "webRequestBlocking", "storage"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}